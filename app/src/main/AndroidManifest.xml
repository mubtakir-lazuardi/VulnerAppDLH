<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.VulnerabilityAppDLH"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SecretsActivity"
            android:exported="true"
            android:label="Secrets Challenge" />

        <activity
            android:name=".WebViewActivity"
            android:exported="true"
            android:label="WebView Exploits">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="dlh" android:host="webview" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SQLInjectionActivity"
            android:exported="true"
            android:label="SQL Injection" />

        <activity
            android:name=".InsecureFileActivity"
            android:exported="true"
            android:label="File Vulnerabilities" />

        <activity
            android:name=".CryptoActivity"
            android:exported="true"
            android:label="Logic &amp; Crypto" />

        <activity
            android:name=".GraphQLInjectionActivity"
            android:exported="true"
            android:label="GraphQL Injection" />

        <activity
            android:name=".UnprotectedExportedActivity"
            android:exported="true"
            android:label="IPC Vulnerability">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- VULNERABILITY: Generic scheme and wildcard host (Deep Link Hijacking) -->
                <data android:scheme="vulnerapp" android:host="*" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".SpoofableReceiver"
            android:exported="true">
            <!-- VULNERABILITY: Exported receiver trusting action string -->
            <intent-filter>
                <action android:name="com.dlh.vulnerapp.ACTION_RESET_PASSWORD" />
            </intent-filter>
        </receiver>

    </application>

</manifest>